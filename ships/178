<div style='display: inline; float: right;'><image itemprop='image' class='filephoto' alt='Wasp file photo [1915]' title='Wasp file photo [1915]' src='/images/ship_wasp1.jpg' /><script>
		function resizeText(className, percent) {
			var elements = document.getElementsByClassName(className);
