					for (var i = 0; i < rawDataArray.length; i++) {
						var a = rawDataArray[i];
						var title = a[0];
						var fill_color = '#FF0033';
						var marker = L.marker(new L.LatLng(a[1], a[2]), { title: title, color: fill_color });
						marker.bindPopup(L.popup({maxHeight:200}).setContent(title));
						markers.addLayer(marker);
						pointsArray.push(marker);
					}
					mymap.addLayer(markers);
				
				var group = new L.featureGroup(pointsArray);
				mymap.fitBounds(group.getBounds());
				</script>
			<p><b>USS Bunker Hill Operational Timeline</b></p><table border='0' cellspacing='0'><tr bgcolor='eeeeee'><td valign='top' align='right' nowrap><a href='/event/today/05/24/1943' alt='See all events on 24 May 1943' title='See all events on 24 May 1943' class='noStyle'>24 May 1943</a>&nbsp;</td><td>Bunker Hill was commissioned into service.</td></tr><tr bgcolor=''><td valign='top' align='right' nowrap><a href='/event/today/11/05/1943' alt='See all events on 5 Nov 1943' title='See all events on 5 Nov 1943' class='noStyle'>5 Nov 1943</a>&nbsp;</td><td>USS Bunker Hill arrived at Espiritu Santo, New Hebrides.</td></tr><tr bgcolor='eeeeee'><td valign='top' align='right' nowrap><a href='/event/today/10/12/1944' alt='See all events on 12 Oct 1944' title='See all events on 12 Oct 1944' class='noStyle'>12 Oct 1944</a>&nbsp;</td><td>Carrier aircraft from USS Bunker Hill attacked Matsuyama Airfield in Taihoku (now Taipei), Taiwan.</td></tr><tr bgcolor=''><td valign='top' align='right' nowrap><a href='/event/today/10/12/1944' alt='See all events on 12 Oct 1944' title='See all events on 12 Oct 1944' class='noStyle'>12 Oct 1944</a>&nbsp;</td><td>Carrier aircraft from USS Bunker Hill attacked Shinchiku Airfield in Shinchiku (now Hsinchu), Taiwan.</td></tr><tr bgcolor='eeeeee'><td valign='top' align='right' nowrap><a href='/event/today/05/11/1945' alt='See all events on 11 May 1945' title='See all events on 11 May 1945' class='noStyle'>11 May 1945</a>&nbsp;</td><td>USS Bunker Hill was hit by two Japanese special attack aircraft off Okinawa, Japan, killing 373.</td></tr><tr bgcolor=''><td valign='top' align='right' nowrap><a href='/event/today/01/09/1947' alt='See all events on 9 Jan 1947' title='See all events on 9 Jan 1947' class='noStyle'>9 Jan 1947</a>&nbsp;</td><td>Bunker Hill was decommissioned from service.</td></tr></table><br /><p><b>Photographs</b></p><table cellpadding='2' cellspacing='0' border='0'><tr><td><a href='/photo.php?source=all&color=all&list=search&foreigntype=S&foreigntype_id=164'><img src="/images/imagemagick/tmb_54925e567d26a.jpg" border='0' alt='Essex-class aircraft carrier USS Bunker Hill just after launching at the Fore River yards, Quincy, Massachusetts, United States, Dec 11, 1942. Note K-class airship from Airship Patrol Squadron ZP-11 overhead.'></a></td><td><a href='/photo.php?source=all&color=all&list=search&foreigntype=S&foreigntype_id=164'><img src="/images/imagemagick/tmb_air_corsair34.jpg" border='0' alt='F4U-1 Corsair bouncing up on the flight deck of USS Bunker Hill during an landing attempt, 1943; seen in Feb 1969 issue of US Navy publication Naval Aviation News'></a></td><td><a href='/photo.php?source=all&color=all&list=search&foreigntype=S&foreigntype_id=164'><img src="/images/imagemagick/tmb_50f91274f01ed.jpg" border='0' alt='SB2C Helldiver getting a wave-off from USS Bunker Hill, 1943. Note Helldiver in the distance with wheels up but flaps down, apparently preparing for a water landing.'></a></td><td><a href='/photo.php?source=all&color=all&list=search&foreigntype=S&foreigntype_id=164'><img src="/images/imagemagick/tmb_50b734336ca7f.jpg" border='0' alt='F4U-1 Corsair of VF-17, “The Jolly Rogers,” landing aboard the carrier Bunker Hill south of Bermuda during her shakedown cruise, 17 July 1943. Photo 1 of 2'></a></td></tr></table><a href='/photo.php?source=all&color=all&list=search&foreigntype=S&foreigntype_id=164'>See all 33 photographs of Aircraft Carrier USS Bunker Hill (CV-17)</a><br /><br /><br /><br />
