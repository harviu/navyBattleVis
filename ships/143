<div style='display: inline; float: right;'><image itemprop='image' class='filephoto' alt='Juneau file photo [3826]' title='Juneau file photo [3826]' src='/images/ship_juneau1.jpg' /><script>
		function resizeText(className, percent) {
			var elements = document.getElementsByClassName(className);
